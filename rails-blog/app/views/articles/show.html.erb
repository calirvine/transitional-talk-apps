<h1 class="text-5xl self-center mb-6"><%= @article.title %></h1>

<p class="my-10"><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit post", edit_article_path(@article), class: "px-6 py-2 mx-12 my-5 block rounded-md text-lg font-semibold text-indigo-100 bg-indigo-600 hover:bg-indigo-500 text-center" %></li>
  <li><%= link_to "Delete post", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?",
                    
                  }, class: "px-6 py-2 mx-12 my-5 block rounded-md text-lg font-semibold text-indigo-100 bg-red-600 hover:bg-red-500 text-center" %></li>
</ul>

<h2 class="text-3xl my-4">Comments</h2>
<%= render @article.comments %>

<h2  class="text-xl my-4">Add a comment:</h2>
<%= render 'comments/form' %>